<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dzdezeed.aun_form.Menu_Activity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="146dp"
        android:text="ข้อมูลสำหรับผู้เข้าร่วมโครงการพัฒนาระบบเครือข่ายเพื่อผลิตรองเท้าเฉพาะบุคคลสำหรับผู้สูงอายุ"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:text="Add / Update User"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/BHistory"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="28dp"
        android:text="History"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BAdd" />

    <Button
        android:id="@+id/BLogout"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BHistory"
        app:layout_constraintVertical_bias="0.042"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="474dp" />
</android.support.constraint.ConstraintLayout>
